<main class='home'>
  <header>
    <h1>Rental Cars</h1>
    <h2>Bem vindo ao sistema de gestão de locação</h2>
  </header>

  <% if user_signed_in? %>
    <%= link_to 'Sair', destroy_user_session_path, method: :delete %>
  <% else %>
    <%= link_to 'Entrar', new_user_session_path %>
  <% end %>

  <%= link_to 'Categorias', car_categories_path, class: 'link-btn' %>
  <%= link_to 'Subsidiarias', subsidiaries_path, class: 'link-btn' %>
  <%= link_to 'Modelos de carro', car_models_path, class: 'link-btn' %>
  <%= link_to 'Clientes', clients_path, class: 'link-btn' %>
  <%= link_to 'Cadastrar um carro', new_car_path, class: 'link-btn' %>
</main>
