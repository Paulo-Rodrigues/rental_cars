<section class='car_models_links'>
  <%= link_to 'Voltar', car_models_path, class: 'link-btn'%>
</section>

<section class='car_models'>
<%= form_with(model: @car_model, local: true, html: {class: 'car_models_form'}) do |form| %>

  
  <% if @car_model.errors.any? %>
    <ul>
      <% @car_model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name %>
  </p>
  
  <p>
    <%= form.label :year, 'Ano' %>
    <%= form.text_field :year %>
  </p>

  <p>
    <%= form.label :manufacturer, 'Fabricante' %>
    <%= form.text_field :manufacturer %>
  </p>

  <p>
    <%= form.label :fuel_type, 'Tipo de combustÃ­vel' %>
    <%= form.text_field :fuel_type %>
  </p>

  <p>
    <%= form.label :motorization, 'Cavalos' %>
    <%= form.text_field :motorization %>
  </p>

  <p>
    <%= form.label :car_category_id, 'Categoria' %>
    <%= form.collection_select :car_category_id, @car_categories, :id, :name %>
  </p>

  <p>
    <%= form.submit 'Enviar', class: 'link-btn' %>
  </p>
<% end %>
</section>
