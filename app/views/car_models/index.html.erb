<section class='car_models_links'>
  <%= link_to 'Registrar novo modelo de carro', new_car_model_path, class: 'link-btn' %>
  <%= link_to 'Voltar', root_path, class: 'link-btn' %>
</section>

<section class='car_categories'>
  <% if @car_models.none? %>
    <h3>Nenhum modelo de carro cadastrado</h3>
  <% end %>


  <table class='striped subsidiaries_list'>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ano</th>
      <th>Fabricante</th>
    </tr>
  </thead>

  <tbody>
    <% @car_models.each do |car_model| %>
    <tr>
      <td><%= link_to "#{car_model.name} - #{car_model.year}", car_model, class: 'collection-item' %></td>
      <td><%= car_model.year %></td>
      <td><%= car_model.manufacturer %></td>
    </tr>
  <% end %>
  </tbody>
  </table>
</section>
