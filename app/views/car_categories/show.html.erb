<section class='car_categories_links'>
  <%= link_to 'Voltar', car_categories_path, class: 'link-btn' %>
  <%= link_to 'Editar', edit_car_category_path(@car_category), class: 'link-btn' %>
  <%= link_to 'Apagar', car_category_path(@car_category), method: :delete %>
</section>

<section class='car_categories'>
  <table class='striped car_categories_list'>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Di√°ria</th>
      <th>Seguro do carro</th>
      <th>Seguro de Terceiros</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @car_category.name %></td>
      <td><%= number_to_currency(@car_category.daily_rate) %></td>
      <td><%= number_to_currency(@car_category.car_insurance) %></td>
      <td><%= number_to_currency(@car_category.third_party_insurance) %></td>
    </tr>
  </tbody>
  </table>

  <section>
    <% @car_models.each do |car_model| %>
      <%= car_model.name %>
      <%= car_model.year %>
      <%= car_model.fuel_type %>
    <% end %>
  </section>
</section>
